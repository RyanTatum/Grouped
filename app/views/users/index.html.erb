<div id= 'chat_page' hidden></div>
<div class="main"> 
  <div class="row">
    <div class="col-md-4">
      <div style="height: 300px; overflow-y: auto;">
        <div class="panel panel-default">
          <div class="panel-heading">Group Members</div>
          <table class="table">
            <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td>
                    <%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
                                "data-sid" => @current_user.id, "data-rip" => user.id %>
                  </td>
                </tr>
                </thead>
                <tbody>
            <% end %>
      
                </tbody>
              </table>
            </div>
      
          </div>
      
          <div id="conversations"style="height: 400px; overflow-y: auto;">
            <h3>Your Conversations</h3>
            <hr>
            <% if @conversations.any? %>
                <ul class="media-list">
                  <% @conversations.each do |conversation| %>
                      <a class="conversation" data-cid= <%=conversation.id%> href= "conversations/<%=conversation.id%>">
                      <li class="mediaChat media">
                        <%= image_tag("http://placehold.it/50x50", class: "media-object pull-left") %>
                        <div class="media-body">
                              <h4 class="media-heading"><%= conversation_interlocutor(conversation).name %></h4>
                              <p id = "lastMessage"><%= conversation.messages.last.nil? ? "No messages" : truncate(conversation.messages.last.body, length: 45) %></p>
                        </div>
                      </li>
                      </a>
                  <% end %>
                </ul>
            <% else %>
                <p>You have no conversations. Click send message with any user to create one.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div> 
