          var newFeature = new NewFeature();
          newFeature.set("name", $('#name').val());
          $('#name').val("");
          newFeature.set("start_date", $('#startDate').val());
          $('#startDate').val("");
          newFeature.set("end_date", $('#endDate').val());
          $('#endDate').val("");
          
          newFeature.save(null, {
            success: function(newFeature) {
              div_sp_hide();
              changeTable();
              return true;
            },
